{
    "name": "Zusam",
    "license": "AGPL-3.0-or-later",
    "scripts": {
        "build": "parcel build --no-source-maps src/index.html",
        "clean": "rm -rf dist/*",
        "lang": "cp src/assets/lang/*.js dist/",
        "postbuild": "sed -E -i 's/lang.[a-z0-9]+.js/lang.js/' dist/index.html && rm dist/lang*",
        "prebuild": "yarn lang",
        "prelang": "yarn clean"
    },
    "dependencies": {
        "node-sass": "~4",
        "parcel-bundler": "~1",
        "pica": "~5",
        "preact": "^10.0.0-rc.3"
    },
    "devDependencies": {
        "babel-core": "~6",
        "babel-plugin-transform-react-jsx": "~6",
        "babel-preset-env": "~1",
        "sass": "~1"
    }
}
