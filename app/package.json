{
    "name": "Zusam",
    "version": "0.1-beta.6",
    "license": "GPL-3.0-or-later",
    "scripts": {
        "build": "parcel build --no-source-maps src/index.html",
        "clean": "rm -rf dist/*",
        "lang": "cp src/assets/lang/*.js dist/",
        "postbuild": "sed -E -i 's/lang.[a-z0-9]+.js/lang.js/' dist/index.html && rm dist/lang*",
        "prebuild": "yarn lang",
        "prelang": "yarn clean"
    },
    "dependencies": {
        "node-sass": "~4.11",
        "parcel-bundler": "~1.11",
        "pica": "~5.0",
        "preact": "~8"
    },
    "devDependencies": {
        "babel-core": "~6.26",
        "babel-plugin-transform-react-jsx": "~6.24",
        "babel-preset-env": "~1.7",
        "sass": "~1.16"
    }
}
